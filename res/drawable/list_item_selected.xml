<?xml version="1.0" encoding="utf-8"?>

<!-- Shape do item de uma lista (ListView), quando selecionado. -->

<shape xmlns:android="http://schemas.android.com/apk/res/android"
	android:shape="rectangle" >

	<gradient
		android:angle="270"
		android:startColor="#7ec979"
		android:centerColor="#9dfc97"
		android:endColor="#7ec979" />

	<stroke
		android:width="2dp"
		android:color="#80000000" />

	<padding
		android:top="8dp"
		android:right="5dp"
		android:bottom="8dp"
		android:left="5dp" />

	<corners android:radius="7dp" />

</shape>