<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="true">
		<shape>
			<gradient
				android:angle="270"
				android:startColor="@color/button_pressed_gradient_start"
				android:centerColor="@color/button_pressed_gradient_center"
				android:endColor="@color/button_pressed_gradient_end" />

			<stroke
				android:width="1dp"
				android:color="@color/button_statePressed_stroke" />

			<corners
				android:radius="16dp" />

			<padding
				android:top="10dp"
				android:right="10dp"
				android:bottom="10dp"
				android:left="10dp" />
		</shape>
	</item>

	<item>
		<shape>
			<gradient
				android:angle="270"
				android:startColor="@color/button_gradient_start"
				android:centerColor="@color/button_gradient_center"
				android:endColor="@color/button_gradient_end" />

			<stroke
				android:width="1dp"
				android:color="@color/button_stroke" />

			<corners
				android:radius="16dp" />

			<padding
				android:top="10dp"
				android:right="10dp"
				android:bottom="10dp"
				android:left="10dp" />
		</shape>
	</item>

</selector>