<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.listviewmultiselection.VersaoAActivity" >

    <Button
        android:id="@+id/VersaoA_btnEditarItensLista"
        style="@style/widthFill_heightWrap"
        android:text="@string/Versao_btnEditarItensLista"
        android:onClick="onClick" />

    <LinearLayout
        android:id="@+id/VersaoA_layOrdenacao"
        style="@style/widthFill_heightWrap"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/VersaoA_btnEditarItensLista" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/Versao_txvOrdenarPor" />

        <Spinner
            android:id="@+id/VersaoA_spnOrdenacao"
            style="@style/widthFill_heightWrap" />
    </LinearLayout>

    <TextView
        android:id="@+id/VersaoA_txvTotalItensLista"
        style="@style/widthFill_heightWrap"
        android:layout_below="@+id/VersaoA_layOrdenacao"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal" />

    <ListView
        android:id="@+id/VersaoA_ltvItens"
        style="@style/widthFill_heightWrap"
        android:layout_below="@+id/VersaoA_txvTotalItensLista"
        android:layout_marginTop="10dp" />

</RelativeLayout>