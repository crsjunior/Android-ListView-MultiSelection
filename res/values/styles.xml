<resources>

	<style name="AppBaseTheme" parent="android:Theme.Light"></style>

	<style name="AppTheme" parent="AppBaseTheme"></style>

	<style name="widthFill_heightWrap">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="listview_itens_width_height">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">@dimen/ltvItens_height</item>
	</style>

	<style name="textview_propriedade_item">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
	</style>

	<style name="txvNome" parent="@style/textview_propriedade_item">
		<item name="android:layout_marginLeft">7dp</item>
		<item name="android:textSize">22sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="txvDescricao" parent="@style/textview_propriedade_item">
		<item name="android:layout_marginLeft">17dp</item>
		<item name="android:textSize">14sp</item>
	</style>

</resources>